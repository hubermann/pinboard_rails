#pin_show.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading.pin_image      
        %p= image_tag @pin.image.url(:medium)
      .panel-body
        %h1= @pin.title
      
        %p= @pin.description
      
      .panel-footer
        .row
          .col-md-6 
            %p 
              Submited by:
              =  @pin.user.email
          .col-md-6    
            = link_to 'back', root_path, class: 'btn btn-small' 
            = link_to 'edit', edit_pin_path, class: 'btn btn-small' 
            = link_to 'Delete', pin_path, method: :delete, data: {      confirm: "Are you sure about delete?"}, class: 'btn btn-small' 